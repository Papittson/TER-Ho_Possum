var creatures = [[], [], [], []];  // Les sous-listes seront remplies des objets correspondant aux crÃ©atures des joueurs
var seuilSoif =  [[], [], [], []] ; // pour expliciter l'exemple
var seuilFaim =  [[], [], [], []] ; // idem

function action(creature) {
        if (creature.tauxHydratation < seuilSoif &&
localisationCase("eau", creature)) { hydratation(creature); return }
        if (creature.tauxHydratation < seuilSoif ) { recherche("eau",
creature); return }
        if (creature.tauxSatiete < seuilFaim &&
localisationCase("herbe", creature)) { broutage(creature); return }
        if (creature.tauxSatiete < seuilFaim ) { recherche("herbe", creature); return }
       //....
}

function tourDeJeu() {
     for (let joueur=0; joueur < nbJoueurs; joueur++) {
          for (let creature of creatures[joueur]) {
               action(creature);
         }
    }
}

setInterval(tourDeJeu, 1000);  // 1000 millisecondes ou autre intervalle de temps
